  "info": {
    "title": "Inventory Management API",
    "description": "A RESTful API for inventory management with CRUD operations. This API provides endpoints to create, read, update, and delete inventory items, as well as search functionality.",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [],
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "components": {
    "schemas": {
      "InventoryItemEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Auto-generated unique identifier",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Name of the inventory item",
            "example": "Laptop"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the item",
            "example": "High-performance laptop for business use"
          },
          "quantity": {
            "type": "number",
            "description": "Available quantity",
            "example": 15
          },
          "price": {
            "type": "number",
            "description": "Price per unit",
            "example": 1299.99
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "quantity",
          "price"
        ]
      },
      "CreateInventoryItemDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the inventory item",
            "example": "Laptop"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the item",
            "example": "High-performance laptop for business use"
          },
          "quantity": {
            "type": "number",
            "description": "Available quantity",
            "example": 15,
            "minimum": 0
          },
          "price": {
            "type": "number",
            "description": "Price per unit",
            "example": 1299.99,
            "minimum": 0
          }
        },
        "required": [
          "name",
          "description",
          "quantity",
          "price"
        ]
      },
      "UpdateInventoryItemDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the inventory item",
            "example": "Updated Laptop"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the item",
            "example": "Updated description"
          },
          "quantity": {
            "type": "number",
            "description": "Available quantity",
            "example": 20,
            "minimum": 0
          },
          "price": {
            "type": "number",
            "description": "Price per unit",
            "example": 1499.99,
            "minimum": 0
          }
        },
        "required": [
          "name",
          "description",
          "quantity",
          "price"
        ]
      },
      "FeedbackItemEntity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "Auto-generated unique identifier",
            "example": 1
          },
          "date": {
            "type": "string",
            "description": "Date of the feedback",
            "example": "2025-11-14"
          },
          "title": {
            "type": "string",
            "description": "Title of the feedback",
            "example": "Great product quality"
          },
          "email": {
            "type": "string",
            "description": "Email of the reporter",
            "example": "customer@example.com"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the feedback",
            "example": "The product exceeded my expectations. Very satisfied with the purchase."
          }
        },
        "required": [
          "id",
          "date",
          "title",
          "email",
          "description"
        ]
      },
      "CreateFeedbackItemDto": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "description": "Date of the feedback",
            "example": "2025-11-14"
          },
          "title": {
            "type": "string",
            "description": "Title of the feedback",
            "example": "Great product quality"
          },
          "email": {
            "type": "string",
            "description": "Email of the reporter",
            "example": "customer@example.com"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the feedback",
            "example": "The product exceeded my expectations. Very satisfied with the purchase."
          }
        },
        "required": [
          "date",
          "title",
          "email",
          "description"
        ]
      }
    }
  }
}