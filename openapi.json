{
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "description": "Get basic information about the API and available endpoints",
        "operationId": "AppController_getInfo",
        "parameters": [],
        "responses": {
          "200": {
            "description": "API information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    },
                    "endpoints": {
                      "type": "object"
                    },
                    "documentation": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        },
        "summary": "API information",
        "tags": [
          "General"
        ]
      }
    },
    "/api/inventory": {
      "get": {
        "description": "Retrieve a complete list of all inventory items",
        "operationId": "InventoryController_findAll",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successfully retrieved inventory items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "count": {
                      "type": "integer",
                      "example": 3
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/InventoryItemEntity"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "summary": "List all inventory items",
        "tags": [
          "Inventory"
        ]
      },
      "post": {
        "description": "Add a new item to the inventory",
        "operationId": "InventoryController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateInventoryItemDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Inventory item created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Inventory item created successfully"
                    },
                    "data": {
                      "$ref": "#/components/schemas/InventoryItemEntity"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "summary": "Create a new inventory item",
        "tags": [
          "Inventory"
        ]
      }
    },
    "/api/inventory/search": {
      "get": {
        "description": "Search for inventory items by name or description",
        "operationId": "InventoryController_search",
        "parameters": [
          {
            "name": "q",
            "required": true,
            "in": "query",
            "description": "Search term to match against item name or description",
            "schema": {
              "example": "laptop",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "count": {
                      "type": "integer",
                      "example": 1
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/InventoryItemEntity"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing search query parameter",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Search query parameter \"q\" is required"
                    }
                  }
                }
              }
            }
          }
        },
        "summary": "Search inventory items",
        "tags": [
          "Inventory"
        ]
      }
    },
    "/api/inventory/{id}": {
      "get": {
        "description": "Retrieve details of a single inventory item by its ID",
        "operationId": "InventoryController_findOne",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Unique identifier of the inventory item",
            "schema": {
              "example": 1,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved inventory item",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/InventoryItemEntity"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Inventory item not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Inventory item with ID 1 not found"
                    }
                  }
                }
              }
            }
          }
        },
        "summary": "Get a specific inventory item",
        "tags": [
          "Inventory"
        ]
      },
      "put": {
        "description": "Update all fields of an existing inventory item",
        "operationId": "InventoryController_update",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Unique identifier of the inventory item",
            "schema": {
              "example": 1,
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateInventoryItemDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inventory item updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Inventory item updated successfully"
                    },
                    "data": {
                      "$ref": "#/components/schemas/InventoryItemEntity"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Inventory item not found"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "summary": "Update an existing inventory item",
        "tags": [
          "Inventory"
        ]
      },
      "delete": {
        "description": "Remove an inventory item from the system",
        "operationId": "InventoryController_remove",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Unique identifier of the inventory item",
            "schema": {
              "example": 1,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Inventory item deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Inventory item deleted successfully"
                    },
                    "data": {
                      "$ref": "#/components/schemas/InventoryItemEntity"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Inventory item not found"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "summary": "Delete an inventory item",
        "tags": [
          "Inventory"
        ]
      }
    },
