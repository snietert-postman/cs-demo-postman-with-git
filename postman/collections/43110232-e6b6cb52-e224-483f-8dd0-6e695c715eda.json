{
	"info": {
		"_postman_id": "43110232-e6b6cb52-e224-483f-8dd0-6e695c715eda",
		"name": "Inventory API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "API overview",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "aa61eae6-6abd-4487-92c7-1d5ee4d05db7",
						"exec": [
							"// Test 1: Validate response status code is 200 OK",
							"pm.test(\"Status code is 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Test 2: Validate response body contains welcome message",
							"pm.test(\"Response contains welcome message to Inventory Management API\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.message).to.exist;",
							"    pm.expect(jsonData.message.toLowerCase()).to.include(\"welcome\");",
							"    pm.expect(jsonData.message.toLowerCase()).to.include(\"inventory management api\");",
							"});",
							"",
							"// Test 3: Validate response includes a version number",
							"pm.test(\"Response includes version number\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.version).to.exist;",
							"    pm.expect(jsonData.version).to.be.a(\"string\");",
							"    pm.expect(jsonData.version).to.match(/^\\d+\\.\\d+\\.\\d+$/); // Validates semantic versioning format",
							"});",
							"",
							"// Test 4: Validate response has endpoints object with multiple API endpoints",
							"pm.test(\"Response has endpoints object with multiple API endpoints\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.endpoints).to.exist;",
							"    pm.expect(jsonData.endpoints).to.be.an(\"object\");",
							"    pm.expect(Object.keys(jsonData.endpoints).length).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Endpoints object contains expected API routes\", function () {",
							"    const jsonData = pm.response.json();",
							"    const endpoints = jsonData.endpoints;",
							"    ",
							"    // Verify multiple endpoints exist",
							"    pm.expect(Object.keys(endpoints).length).to.be.at.least(5);",
							"    ",
							"    // Verify each endpoint has a description",
							"    Object.keys(endpoints).forEach(function(endpoint) {",
							"        pm.expect(endpoints[endpoint]).to.be.a(\"string\");",
							"        pm.expect(endpoints[endpoint].length).to.be.above(0);",
							"    });",
							"});",
							"",
							"// Test 5: Verify the structure of the response JSON",
							"pm.test(\"Response JSON has correct structure\", function () {",
							"    const jsonData = pm.response.json();",
							"    ",
							"    // Validate top-level properties exist",
							"    pm.expect(jsonData).to.have.property(\"message\");",
							"    pm.expect(jsonData).to.have.property(\"version\");",
							"    pm.expect(jsonData).to.have.property(\"endpoints\");",
							"    ",
							"    // Validate property types",
							"    pm.expect(jsonData.message).to.be.a(\"string\");",
							"    pm.expect(jsonData.version).to.be.a(\"string\");",
							"    pm.expect(jsonData.endpoints).to.be.an(\"object\");",
							"});",
							"",
							"pm.test(\"Response has valid JSON structure with expected inventory endpoints\", function () {",
							"    const jsonData = pm.response.json();",
							"    const endpoints = jsonData.endpoints;",
							"    ",
							"    // Check for key inventory-related endpoints",
							"    const endpointKeys = Object.keys(endpoints);",
							"    const hasInventoryEndpoints = endpointKeys.some(key => key.toLowerCase().includes(\"inventory\"));",
							"    ",
							"    pm.expect(hasInventoryEndpoints).to.be.true;",
							"});",
							"",
							"pm.test(\"Response Content-Type is application/json\", function () {",
							"    pm.response.to.have.header(\"Content-Type\");",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
							"});",
							"",
							"pm.test(\"Response time is acceptable (under 2000ms)\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"id": "43110232-1397c1ce-d80d-4a4b-8ec4-0b32a4f6a6e3",
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/info",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"info"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get all inventory items",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "e447fbf4-3671-4f26-965b-97d02a25d6d9",
						"exec": [
							"// Test 1: Validate status code is 200",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Test 2: Validate response time is under 2000ms",
							"pm.test(\"Response time is reasonable (under 2000ms)\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});",
							"",
							"// Test 3: Validate Content-Type header is application/json",
							"pm.test(\"Content-Type header is application/json\", function () {",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
							"});",
							"",
							"// Test 4: Validate response has a valid JSON body",
							"pm.test(\"Response has valid JSON body\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"// Test 5: Validate response wrapper structure",
							"pm.test(\"Response has correct wrapper structure\", function () {",
							"    var jsonData = pm.response.json();",
							"    ",
							"    // Check for success property",
							"    pm.expect(jsonData).to.have.property('success');",
							"    pm.expect(jsonData.success).to.be.a('boolean');",
							"    ",
							"    // Check for count property",
							"    pm.expect(jsonData).to.have.property('count');",
							"    pm.expect(jsonData.count).to.be.a('number');",
							"    ",
							"    // Check for data property",
							"    pm.expect(jsonData).to.have.property('data');",
							"});",
							"",
							"// Test 6: Validate data property is an array",
							"pm.test(\"Response data property is an array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"});",
							"",
							"// Test 7: Validate count matches array length",
							"pm.test(\"Count property matches data array length\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.count).to.equal(jsonData.data.length);",
							"});",
							"",
							"// Test 8: If array has items, validate structure of each item",
							"pm.test(\"Each inventory item has expected properties\", function () {",
							"    var jsonData = pm.response.json();",
							"    ",
							"    if (jsonData.data.length > 0) {",
							"        jsonData.data.forEach(function(item) {",
							"            // Check that each item is an object",
							"            pm.expect(item).to.be.an('object');",
							"            ",
							"            // Validate common inventory properties exist",
							"            // Testing for id property",
							"            pm.expect(item).to.have.property('id');",
							"            ",
							"            // Testing for name property",
							"            pm.expect(item).to.have.property('name');",
							"            ",
							"            // Validate that id is not null or undefined",
							"            pm.expect(item.id).to.not.be.undefined;",
							"            pm.expect(item.id).to.not.be.null;",
							"            ",
							"            // Validate that name is a string",
							"            pm.expect(item.name).to.be.a('string');",
							"            ",
							"            // Validate additional properties if they exist",
							"            if (item.hasOwnProperty('description')) {",
							"                pm.expect(item.description).to.be.a('string');",
							"            }",
							"            ",
							"            if (item.hasOwnProperty('quantity')) {",
							"                pm.expect(item.quantity).to.be.a('number');",
							"            }",
							"            ",
							"            if (item.hasOwnProperty('price')) {",
							"                pm.expect(item.price).to.be.a('number');",
							"            }",
							"        });",
							"    } else {",
							"        console.log(\"Response data array is empty - no items to validate\");",
							"    }",
							"});",
							"",
							"// Test 9: Additional validation - array length is valid",
							"pm.test(\"Response data array length is valid\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.length).to.be.at.least(0);",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"id": "43110232-85cf3399-c98d-409a-91f9-723f74046742",
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/inventory",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"inventory"
					]
				}
			},
			"response": []
		}
	]
}